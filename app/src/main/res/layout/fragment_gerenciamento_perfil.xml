<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matteotognon.remedio.GerenciamentoPerfil">


    <TextView
        android:id="@+id/textViewNomePerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="39dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imageViewUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewNomePerfil"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:layout_toEndOf="@+id/textViewNomePerfil"
        android:layout_toRightOf="@+id/textViewNomePerfil"
        android:src="@drawable/ic_action_name" />

    <TextView
        android:id="@+id/textViewDescricaoPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewNomePerfil"
        android:layout_alignStart="@+id/textViewNomePerfil"
        android:layout_below="@+id/imageViewUsuario"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:text="TextView" />

    <View
        android:id="@+id/linhaview"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewDescricaoPerfil"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="29dp"
        android:background="@color/cardview_dark_background" />

    <Button
        android:id="@+id/btnEditarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewNomePerfil"
        android:layout_alignStart="@+id/textViewNomePerfil"
        android:layout_below="@+id/linhaview"
        android:layout_marginTop="29dp"
        android:text="Button" />

    <Button
        android:id="@+id/btnAdcionarRemedio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnEditarPerfil"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="90dp"
        android:layout_toEndOf="@+id/btnEditarPerfil"
        android:layout_toRightOf="@+id/btnEditarPerfil"
        android:text="Button" />

    <FrameLayout
        android:id="@+id/frame_remedios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/linhaview"
        android:layout_alignLeft="@+id/linhaview"
        android:layout_alignRight="@+id/linhaview"
        android:layout_alignStart="@+id/linhaview"
        android:layout_below="@+id/btnEditarPerfil"
        android:layout_marginTop="25dp">

    </FrameLayout>

</RelativeLayout>
